<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Scores List</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #1a1a1a;
            color: white;
            margin: 20px;
        }
        h1 {
            color: red;
        }
        ul {
            list-style-type: none;
            padding: 0;
        }
        li {
            background-color: #2a2a2a;
            margin: 5px 0;
            padding: 10px;
            border-radius: 5px;
        }
        .highlight {
            color: red;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <h1>Scores List</h1>
    <ul id="scores-list"></ul>

    <script>
        // Function to load and display scores from scores.json
        async function loadScores() {
            try {
                const response = await fetch('scores.json');
                if (!response.ok) {
                    throw new Error('Failed to load scores.json');
                }
                const data = await response.json();

                const scoresList = document.getElementById('scores-list');
                data.scores.forEach(score => {
                    const listItem = document.createElement('li');
                    listItem.innerHTML = `${score.name}: <span class="highlight">${score.score}</span>`;
                    scoresList.appendChild(listItem);
                });
            } catch (error) {
                console.error('Error loading scores:', error);
            }
        }

        // Load the scores when the page is ready
        loadScores();
    </script>
</body>
</html>
